@model FirstApp.Models.ViewModels.CourseDetailViewModel

@{
    ViewData["Title"] = $"Details - {Model.Title}";
}

<section class="course-info">
    <div class="row">
        <div class="col-md-9">
            <h1>@Model.Title</h1>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <a href="#" class="btn btn-warning btn-lg subscribe-course">Iscriviti</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <p>@Model.Description</p>
        </div>
        <div class="col-md-3">
            <aside>
                <author>di @Model.Author</author>
                <div class="price">
                    <p>@Model.Price</p>
                </div>
            </aside>
        </div>
    </div>
</section>

<section class="course-lesson">
    <h2>Lezioni (@Model.Lessons.Count)</h2>
    @foreach(var lesson in Model.Lessons)
    {
        <hr/>
        <div class="row">
            <div class="col-md-9 d-flex align-items-center">
                <a href="#">@lesson.Title</a>
            </div>
            <div class="col-md-3 d-flex align-items-center lesson-duration">
                <time>@lesson.Duration.ToString("m'm 's's'")</time>
            </div>
        </div>
    }
    <hr/>
    <div class="row course-duration">
        <div class="col-md-9 d-flex align-items-center">
            Totale
        </div>
        <div class="col-md-3 d-flex align-items-center">
            <time>@Model.TotalCourseDuration.ToString("m'm 's's'")</time>
        </div>
    </div>
</section>